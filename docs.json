{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "iLuminara-Core",
  "colors": {
    "primary": "#16A34A",
    "light": "#07C983",
    "dark": "#15803D"
  },
  "favicon": "/favicon.svg",
  "mcp": {
    "enabled": true,
    "name": "iLuminara Sovereign Health Fortress",
    "description": "AI-queryable documentation for the Nuclear IP Stack and Regulatory Singularity",
    "tools": [
      {
        "name": "query_compliance",
        "description": "Query compliance status across 14 global legal frameworks"
      },
      {
        "name": "query_nuclear_ip",
        "description": "Query Nuclear IP Stack protocols (IP-02 through IP-06)"
      },
      {
        "name": "query_api",
        "description": "Query API endpoints and integration patterns"
      },
      {
        "name": "query_deployment",
        "description": "Query deployment configurations for GCP, edge, and hybrid"
      }
    ]
  },
  "timestamp": true,
  "personalization": {
    "enabled": true,
    "type": "jwt",
    "cookieName": "iluminara_session"
  },
  "suggestions": {
    "enabled": true,
    "repository": "VISENDI56/iLuminara-Core",
    "branch": "main",
    "autoUpdate": true
  },
  "navigation": {
    "tabs": [
      {
        "tab": "Documentation",
        "groups": [
          {
            "group": "Getting started",
            "pages": [
              "index",
              "quickstart",
              "changelog"
            ]
          },
          {
            "group": "Architecture",
            "pages": [
              "architecture/overview",
              "architecture/golden-thread"
            ]
          },
          {
            "group": "Governance kernel",
            "pages": [
              "governance/overview",
              "governance/compliance"
            ]
          },
          {
            "group": "AI agents",
            "pages": [
              "ai-agents/overview",
              "ai-agents/vertex-ai-shap"
            ]
          },
          {
            "group": "Security stack",
            "pages": [
              "security/overview"
            ]
          },
          {
            "group": "Deployment",
            "pages": [
              "deployment/overview"
            ]
          }
        ]
      },
      {
        "tab": "API reference",
        "groups": [
          {
            "group": "Core API",
            "pages": [
              "api-reference/overview",
              "api-reference/voice-processing",
              "api-reference/bio-interface"
            ]
          }
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "GitHub",
          "href": "https://github.com/VISENDI56/iLuminara-Core",
          "icon": "github"
        },
        {
          "anchor": "Command Console",
          "href": "https://iluminara-war-room.streamlit.app",
          "icon": "tower-control"
        },
        {
          "anchor": "Transparency Audit",
          "href": "https://iluminara-audit.streamlit.app",
          "icon": "file-contract"
        }
      ]
    }
  },
  "logo": {
    "light": "/logo/light.svg",
    "dark": "/logo/dark.svg"
  },
  "navbar": {
    "links": [
      {
        "label": "Repository",
        "href": "https://github.com/VISENDI56/iLuminara-Core"
      },
      {
        "label": "Live Apps",
        "href": "https://iluminara-war-room.streamlit.app"
      }
    ]
  },
  "contextual": {
    "options": [
     "copy",
     "view",
     "chatgpt",
     "claude",
     "perplexity",
     "mcp",
     "cursor",
     "vscode"
   ]
  },
  "footer": {
    "socials": {
      "github": "https://github.com/VISENDI56/iLuminara-Core"
    }
  }
}
